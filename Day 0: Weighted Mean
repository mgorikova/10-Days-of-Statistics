def weightedMean(X, W):
    wm=[i*j for i,j in zip(X,W)]
    wm=sum(wm)/sum(W)
    return round(wm,1)

if __name__ == '__main__':
    n = int(input().strip())

    vals = list(map(int, input().rstrip().split()))

    weights = list(map(int, input().rstrip().split()))

    weightedMean(vals, weights)
    res=weightedMean(vals, weights)
    res=round(res,1)
    print(res)
